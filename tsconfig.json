{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@es-drager/*": [
        "packages/*"
      ],
      "es-drager": [
        "packages/"
      ]
    },
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "types": [
    "node",
    "vite/client"
  ]
}
